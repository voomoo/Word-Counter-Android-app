<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="21"
    android:layout_height="match_parent"
    android:background="#75BF80"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Enter your paragraph here. Total number of word will be displayed below"
        android:textSize="20dp"
        android:gravity="left|top"
        android:textColor="#F2ECD8"
        android:layout_weight="8"
        android:id="@+id/input"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Calculate"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textStyle="bold"
            android:background="#CCD99C"
            android:onClick="calculate"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Clear"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#CCD99C"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textStyle="bold"
            android:onClick="clear"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:hint="Total Number of Words Will be Displayed Here"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#F2ECD8"
        android:id="@+id/result"
        />



</LinearLayout>